<h1>New Project</h1>
<%= link_to "Projects", projects_path %> | <%= link_to "Users", users_path %> | <%= link_to "New Project", new_project_path %> | <%= link_to "New User", new_user_path %> 

<p> ------------------------------------------------- </p>

<% if @project.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this project from being saved:</h2>
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @project do |form| %>
  <div class="form-group">
    <%= form.label :project_name %>
    <%= form.text_field :project_name, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 5%>
  </div>

 <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :category_name, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, { include_blank: true }, class: "form-control" %> 
  </div>

  <%= form.button 'Create Project', class: "btn btn-success" %>
  <% end %>

